{
  "manifest_version": 2,
  "name": "<%= name %>",
  "description": "<%= description %>",
  "version": "<%= version %>",
  "icons": {
    "128": "img/appIcon.png"
  },
  "background": {
    "scripts": [
      "js/block.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/libs.js",
        "js/content.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
